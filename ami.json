{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "instance_type": "t2.micro",
      "source_ami": "ami-04a81a99f5ec58529",  // Replace with your base AMI ID
      "ssh_username": "ubuntu",
      "ami_name": "my-custom-ami-{{timestamp}}",
      "tags": {
        "Name": "Nginx"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo apt-get install -y nginx"
      ]
    }
  ]
}
